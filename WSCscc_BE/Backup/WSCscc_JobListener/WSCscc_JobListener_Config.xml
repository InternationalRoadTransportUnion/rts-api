	</Section>			

	<Section name="CopyToResponseProcessor">
		<CopyToResponseProcessorSettings DBHelperFactoryPlugin="DBHelperFactory" ></CopyToResponseProcessorSettings>
	</Section>


	<Section name="CopyToJobListener">
