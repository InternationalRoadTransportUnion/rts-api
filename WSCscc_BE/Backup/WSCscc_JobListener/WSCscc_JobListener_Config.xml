<Config>
	<Section name="PluginManager">
		<Plugin name="DBHelperFactory" objectType="IRU.RTS.CommonComponents.DBHelperFactory, CommonComponents" isRunnable="false" />

		<Plugin name="CopyToJobListener" objectType="IRU.RTS.CopyToProcessor.CopyToJobListener, WSCscc_JobListener"
			isRunnable="true" />
<Plugin name="CopyToResponseProcessor" objectType="IRU.RTS.CopyToProcessor.CopyToResponseProcessor, WSCscc_JobListener"
			isRunnable="false" />
		<Plugin name="FileSystemListener" objectType="IRU.RTS.CommonComponents.FileSystemListener, FileListener"
			isRunnable="true" /> 

		
		

	</Section>


	<Section name="FileSystemListener">
		<FileSystemListener DeliverToPlugin="CopyToResponseProcessor" PollFolderLocation="O:\CopyTo_Request\CopyToResponseDrop" WorkingFolderLocation="O:\CopyTo_Request\CopytoResponseWorkingfolder"
