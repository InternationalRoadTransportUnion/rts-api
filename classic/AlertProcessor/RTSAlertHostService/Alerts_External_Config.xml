<Config>
    <Section name="PluginManager">
        <Plugin name="DBHelperFactory" objectType="IRU.RTS.CommonComponents.DBHelperFactory, CommonComponents" isRunnable="false" />
        <Plugin name="TCHQLogListener" objectType="IRU.RTS.AlertProcessor.LogListener, LogListener" isRunnable="true" />
        <Plugin name="WSRQLogListener" objectType="IRU.RTS.AlertProcessor.LogListener, LogListener" isRunnable="true" />
        <Plugin name="ExternalLogListener" objectType="IRU.RTS.AlertProcessor.LogListener, LogListener" isRunnable="true" />
        <Plugin name="EmailNotificationHandler" objectType="IRU.RTS.NotificationHandlers.EmailNotifier, NotificationHandlers" isRunnable="false" />
